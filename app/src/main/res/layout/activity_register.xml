<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".view.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="411dp"
            android:layout_height="736dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/guide_vert4"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="385dp"
                android:layout_marginRight="180dp"
                android:background="@drawable/button_border"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#000000" />

            <Button
                android:id="@+id/regist"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="504dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button_border"
                android:text="회원가입"
                android:textAllCaps="false"
                android:textColor="#EC407A"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/idEdit"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_alignStart="@+id/guide_vert4"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_border"
                android:gravity="center"
                android:hint="이메일주소"
                android:textColor="#000000"
                android:textColorHint="#6e6e6e"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/iducode"
                android:layout_width="365dp"
                android:layout_height="45dp"
                android:layout_alignStart="@+id/guide_vert4"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="265dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_border"
                android:gravity="center"
                android:hint="IDU Code"
                android:textColor="#000000"
                android:textColorHint="#6e6e6e"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/passwordEdit"
                android:layout_width="365dp"
                android:layout_height="45dp"
                android:layout_alignStart="@+id/guide_vert4"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="162dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_border"
                android:gravity="center"
                android:hint="비밀번호입력(영문 + 숫자 + 특수문자 조합 8자리 이상)"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#6e6e6e"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/passwordCheckEdit"
                android:layout_width="365dp"
                android:layout_height="45dp"
                android:layout_alignStart="@+id/guide_vert4"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="213dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_border"
                android:gravity="center"
                android:hint="비밀번호확인"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#6e6e6e"
                android:textSize="15dp" />


            <Button
                android:id="@+id/btnValid"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignRight="@+id/guide_center"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="114dp"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="-219dp"
                android:background="@color/com_kakao_button_text_press"
                android:text="ID중복체크"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/guide_vert4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="326dp"
                android:text="업체명 :"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="76dp"
                android:text="이메일 회원가입"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="362dp"
                android:layout_marginEnd="0dp"
                app:srcCompat="@android:color/darker_gray" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="48dp"
                android:layout_marginTop="418dp"
                android:text="이용 약관 동의" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="48dp"
                android:layout_marginTop="447dp"
                android:text="개인정보 수집 및 이용동의" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="48dp"
                android:layout_marginTop="388dp"
                android:text="전체 동의" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="318dp"
                android:layout_marginEnd="168dp" />


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>